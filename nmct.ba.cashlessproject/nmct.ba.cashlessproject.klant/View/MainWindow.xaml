<Controls:MetroWindow x:Class="nmct.ba.cashlessproject.klant.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Klant" Height="800" Width="800"
        xmlns:v="clr-namespace:nmct.ba.cashlessproject.klant.View"
        xmlns:Controls="clr-namespace:MahApps.Metro.Controls;assembly=MahApps.Metro"
        xmlns:vm="clr-namespace:nmct.ba.cashlessproject.klant.ViewModel"
>
    <Window.DataContext>
        <vm:ApplicationVM/>
    </Window.DataContext>
    <Window.Resources>
        <DataTemplate DataType="{x:Type vm:CashIOVM}">
            <v:CashIO/>
        </DataTemplate>
        <DataTemplate DataType="{x:Type vm:LoginVM}">
            <v:Login/>
        </DataTemplate>
    </Window.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="9*"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
        </Grid.RowDefinitions>
        <ContentControl Grid.Row="0" Grid.Column="0" Content="{Binding CurrentPage}"/>
        <Button Grid.Row="1" Content="Kaart uitwerpen" Command="{Binding LogoutCommand}"></Button>
    </Grid>
</Controls:MetroWindow>
