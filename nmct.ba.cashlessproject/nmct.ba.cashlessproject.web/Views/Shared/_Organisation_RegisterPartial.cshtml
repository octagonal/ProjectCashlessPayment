@model IEnumerable<nmct.ba.cashlessproject.web.Models.VM.Organisation_RegisterVM>


@{
    ViewBag.Title = "Assigned Registers";
}

<h2>Assigned Registers</h2>

<p>
    @Html.ActionLink("Create New", "Create", "Organisation_Register")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.ORInstance.OrganisationID)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ORInstance.RegisterID)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ORInstance.FromDate)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ORInstance.UntilDate)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(model => item.OrgFriendlyName)
        </td>
        <td>
            @Html.DisplayFor(model => item.RegFriendlyName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ORInstance.FromDate)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ORInstance.UntilDate)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", "Organisation_Register", new { orgid = item.ORInstance.OrganisationID, regid = item.ORInstance.RegisterID }, null) |
            @Html.ActionLink("Details", "Details", "Organisation_Register", new { orgid = item.ORInstance.OrganisationID, regId = item.ORInstance.RegisterID }, null) |
            @Html.ActionLink("Delete", "Delete", "Organisation_Register", new { orgid = item.ORInstance.OrganisationID, regId = item.ORInstance.RegisterID }, null)
        </td>
    </tr>
}
</table>
